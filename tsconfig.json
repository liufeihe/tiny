{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": false,
    "pretty": true,
    "declaration": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "outDir": "dist",
    "esModuleInterop": true
  },
  "includes": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules", "test"]
}
